<%- model_class = Lesson -%>
<div class="page-header">
  <h1><%=t '.title', :default => Lesson %></h1>
</div>
<div class="fieldset">

  <form class="form-horizontal">
    <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:lesson_title) %></dt>
      <dd><pre class="prettyprint"><%= @lessons.lesson_title %></pre></dd>
    </dl>

    <fieldset>
      <legend id="question"></legend>
      <div id="checkboxes" class="form-group">


      </div>

      <div class="form-group">

        <div class="col-lg-10 col-lg-offset-2">
          <button id="prev" type="button" class="btn btn-default">Previous</button>
          <span id="number"></span>
          <button id="next" type="button" class="btn btn-primary">Next</button>
          <button id="check" type="button" class=" hide btn btn-primary">Check</button>
        </div>
      </div>
      <div id="answers">

      </div>
    </fieldset>
  </form>

</div>


