<%= link_to "Lessons", :lessons %>

<%= form_tag @lesson, :method => 'get' do %>
  <%= label_tag :search_title %>
  <%= text_field_tag :search_title, params[:search_title] %>
  <%= submit_tag :search %>
<% end %>


<% if @lessons.any? %>
  <div class="page-header">
    <h1><%=t '.title', :default => "Finded lessons" %></h1>
  </div>
  <div class="col-md-12">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>ID</th>
          <th>Lesson title</th>
          <th>Created at</th>
          <th><%=t '.actions', :default => t("helpers.actions") %></th>
        </tr>
      </thead>
      <tbody>
        <% @lessons.each do |lesson| %>
          <tr>
            <td><%= lesson.id %></td>
            <td><%= lesson.lesson_title %></td>
            <td><%=l lesson.created_at, format: :long %></td>
            <td>
              <%= link_to lesson_path(lesson), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
                <%= glyph 'info-sign' %>
                <%= glyph 'pencil' %>
              <%- end -%>
              <%= link_to lesson_path(lesson), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
                <%= glyph 'remove' %>
              <%- end -%>
              <%= link_to learn_lesson_path(lesson), :method => "GET", :class => 'btn btn-xs', :title => "#{ t('.learn', :default => t('helpers.links.learn')) }" do %>
                <%= glyph 'pencil' %>
              <%- end -%>
              <%= link_to test_lesson_path(lesson), :method => "GET", :class => 'btn btn-xs', :title => "#{ t('.test', :default => t('helpers.links.test')) }" do %>
                <%= glyph 'info-sign' %>
              <%- end -%>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @lessons %>
  </div>
<% end %>

